<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cosw.eci.edu.pancomido.ui.activity.CommandReadyActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cosw.eci.edu.pancomido.ui.fragment.OrderDetailFragment"
        android:id="@+id/order_detail">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/command_ready"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textAlignment="center"
            android:paddingTop="15dp"/>

        <TextView
            android:id="@+id/resume_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/command_ready_message"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_below="@id/title"
            android:paddingTop="10dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/command_qr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/resume_total"
            android:paddingBottom="50dp"
            android:paddingTop="20dp">

        </ImageView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
