<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/dish_name_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Nombreeeeeeeeeeeeeeeeeeeeeeeeeeee"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/dish_price_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="$ XXXXXXXXXXXXXXXX"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingStart="5dp"
        android:layout_alignParentRight="true"
        android:paddingEnd="10dp">

        <Button
            android:id="@+id/dish_del_row"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="@string/minus"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/mybutton"/>

        <TextView
            android:id="@+id/dish_quanty_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="1"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>

        <Button
            android:id="@+id/dish_add_row"
            android:text="@string/plus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/mybutton"/>

    </LinearLayout>





</RelativeLayout>
